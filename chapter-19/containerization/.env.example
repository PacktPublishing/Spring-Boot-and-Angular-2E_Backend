# Docker Compose Environment Variables
# Copy this file to .env and update values as needed

# Eureka Server Configuration
EUREKA_PORT=8761

# API Gateway Configuration
GATEWAY_PORT=8080

# Inventory Service Configuration
INVENTORY_PORT=8081
INVENTORY_CONTEXT_PATH=/inventory

# User Service Configuration
USER_PORT=8082
USER_CONTEXT_PATH=/user

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=inventory
POSTGRES_USER=bookstore
POSTGRES_PASSWORD=bookstore123

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=userDB
MONGO_USER=bookstore
MONGO_PASSWORD=bookstore123
MONGO_AUTH_DB=admin

# Zipkin Configuration
ZIPKIN_HOST=zipkin
ZIPKIN_PORT=9411
ZIPKIN_BASEURL=http://zipkin:9411

# Spring Cloud Configuration
SPRING_CLOUD_VERSION=2025.0.0
JAVA_VERSION=21

# Docker Image Tags (for Docker Hub deployment)
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=ansgohar
IMAGE_TAG=latest

# Eureka Server Image
EUREKA_IMAGE=${DOCKER_REGISTRY}/${DOCKER_NAMESPACE}/eureka-server:${IMAGE_TAG}

# Gateway Server Image
GATEWAY_IMAGE=${DOCKER_REGISTRY}/${DOCKER_NAMESPACE}/gateway-server:${IMAGE_TAG}

# Inventory Service Image
INVENTORY_IMAGE=${DOCKER_REGISTRY}/${DOCKER_NAMESPACE}/inventory-service:${IMAGE_TAG}

# User Service Image
USER_IMAGE=${DOCKER_REGISTRY}/${DOCKER_NAMESPACE}/user-service:${IMAGE_TAG}

# Tracing Configuration
MANAGEMENT_TRACING_SAMPLING_PROBABILITY=1.0
LOGGING_LEVEL=INFO

# Database Volume Persistence
POSTGRES_VOLUME_NAME=postgres_data
MONGO_VOLUME_NAME=mongo_data

# Network Configuration
NETWORK_NAME=bookstore-network
NETWORK_DRIVER=bridge
